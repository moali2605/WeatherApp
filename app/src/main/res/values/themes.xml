<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar</item>
        <item name="colorPrimary">@color/sky</item>
        <item name="colorPrimaryVariant">@color/cozyBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Blue</item>
        <item name="colorSecondaryVariant">@color/Blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
    <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
    <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
    <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal
    </item>
    <item name="shapeAppearance">
        @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
    </item>
    <item name="android:color">?attr/colorSecondaryContainer</item>
</style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/sky</item>
    </style>
</resources>